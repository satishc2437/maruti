{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "UV: Sync Dependencies",
            "type": "shell",
            "command": "uv",
            "args": [
                "sync",
                "--dev"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "Run: PDF Reader MCP Server",
            "type": "shell",
            "command": "uv",
            "args": [
                "run",
                "pdf-reader"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "dedicated",
                "showReuseMessage": true
            },
            "problemMatcher": []
        },
