{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "PDF Reader MCP Server",
            "type": "debugpy",
            "request": "launch",
            "module": "pdf_reader",
            "cwd": "${workspaceFolder}/pdf-reader",
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "XLSX Reader MCP Server",
            "type": "debugpy",
            "request": "launch",
            "module": "xlsx_reader",
            "cwd": "${workspaceFolder}/xlsx-reader",
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "OneNote Reader MCP Server",
            "type": "debugpy",
            "request": "launch",
            "module": "onenote_reader",
            "cwd": "${workspaceFolder}/onenote-reader",
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "Python: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "Python: Debug Tests",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
                "${workspaceFolder}",
                "-v",
                "--tb=short"
            ],
            "console": "integratedTerminal",
            "justMyCode": false,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        }
    ]
}